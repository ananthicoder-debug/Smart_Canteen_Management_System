PORT=5000
MONGO_URI=mongodb://127.0.0.1:27017/foodmanagement
JWT_SECRET=change_this_to_a_strong_secret
JWT_EXPIRES_IN=7d
NODE_ENV=development
# Shorten retry attempts for fast startup during development
DB_MAX_RETRIES=3
DB_BASE_DELAY_MS=200
DB_SERVER_SELECTION_MS=3000
DB_CONNECT_TIMEOUT_MS=3000

# Optional seed user credentials (used by `npm run seed`)
SEED_STAFF_EMAIL=staff@food.local
SEED_STAFF_PASSWORD=password123

# DB reconnect tuning (optional)
# Number of retry attempts for initial DB connection (default: 3)
DB_MAX_RETRIES=3
# Base delay in milliseconds used for exponential backoff (default: 200)
DB_BASE_DELAY_MS=200
DB_SERVER_SELECTION_MS=3000
DB_CONNECT_TIMEOUT_MS=3000
